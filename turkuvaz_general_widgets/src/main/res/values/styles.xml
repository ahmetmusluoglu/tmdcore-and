<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScrollingPagerIndicator">
        <item name="spi_dotColor">@android:color/darker_gray</item>
        <item name="spi_dotSelectedColor">@android:color/darker_gray</item>
        <item name="spi_dotSize">6dp</item>
        <item name="spi_dotSelectedSize">10dp</item>
        <item name="spi_dotSpacing">8dp</item>
        <item name="spi_visibleDotCount">5</item>
        <item name="spi_visibleDotThreshold">2</item>
        <item name="spi_looped">false</item>
    </style>

    <style name="Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="fontType">Exo_Bold</item>
    </style>

    <style name="TitleShort" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontType">Exo_Bold</item>
    </style>

    <style name="Spot" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="fontType">Exo_SemiBold</item>
    </style>

    <style name="SpotShort" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="fontType">Exo_SemiBold</item>
    </style>

    <style name="Description" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="fontType">Exo_Regular</item>
    </style>

    <style name="CategorySelectedItem">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_category_selected</item>
    </style>

    <style name="CategoryDefaultItem">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/shape_category_unselected</item>
    </style>

    <style name="NoTitleDialog" parent="TextAppearance.AppCompat">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
