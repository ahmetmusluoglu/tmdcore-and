<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <turkuvaz.general.turkuvazgeneralwidgets.TurkuvazTextView.TTextView
        android:id="@+id/tv_newsDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center|start"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/llShare"
        android:gravity="center_vertical"
        android:textColor="#9E9E9E"
        android:textSize="12sp"
        app:fontType="Exo_SemiBold" />

    <LinearLayout
        android:id="@+id/llShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_shareFacebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="3dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_facebook_gray_fill" />

        <ImageButton
            android:id="@+id/img_shareTwitter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_twitter_gray_fill" />

        <ImageButton
            android:id="@+id/img_shareWhatsApp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_whatsapp_gray_fill" />

        <ImageButton
            android:id="@+id/img_shareShare"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_share_gray_fill" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/img_textSizeChange"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="right"
                android:layout_margin="3dp"
                android:background="@null"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_font_size_gray" />
        </FrameLayout>

    </LinearLayout>


</RelativeLayout>