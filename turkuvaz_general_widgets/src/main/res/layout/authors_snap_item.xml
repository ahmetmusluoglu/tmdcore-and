<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_columnistItemRoot"
    android:layout_width="240dp"
    android:layout_height="310dp"
    android:layout_margin="5dp"

    android:orientation="vertical"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ic_circle_gray">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_authorImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|bottom" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingTop="8dp">

                <turkuvaz.general.turkuvazgeneralwidgets.TurkuvazTextView.TTextView
                    android:id="@+id/txtTiele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#3A3A3A"
                    android:textSize="16sp"
                    app:fontType="Exo_Bold" />

                <turkuvaz.general.turkuvazgeneralwidgets.TurkuvazTextView.TTextView
                    android:id="@+id/tv_authorDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="11dp"
                    app:fontType="Exo_Regular" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <turkuvaz.general.turkuvazgeneralwidgets.TurkuvazTextView.TTextView
                android:id="@+id/tv_authorsSnapTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#3A3A3A"
                android:textSize="17sp"
                app:fontType="Exo_Bold" />

            <turkuvaz.general.turkuvazgeneralwidgets.TurkuvazTextView.TTextView
                android:id="@+id/tv_authorsSnapContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="7"
                android:text=""
                android:textSize="14sp"
                app:fontType="Exo_Regular" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>