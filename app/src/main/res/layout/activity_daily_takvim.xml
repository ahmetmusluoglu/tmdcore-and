<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".base.CoreDailyTakvim">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_dailyRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/news_list_gray"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frame_newsListAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <FrameLayout
                android:id="@+id/frame_dailyNewsSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/frame_dailyNewsPaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/frame_dailyAuthorsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/frame_dailyNewsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/relLayDailyTakvim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>

    <turkuvaz.general.turkuvazgeneralwidgets.SuccessOrErrorBar.LoadStatus
        android:id="@+id/ls_dailyTakvim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>



