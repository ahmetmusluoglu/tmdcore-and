<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layColumnistProfil"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layColumnistProfilImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_image_back_white"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_newsDetailTop"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <turkuvaz.general.turkuvazgeneralwidgets.TurkuvazTextView.TTextView
        android:id="@+id/tv_columnistAuthorName"
        android:layout_below="@+id/layColumnistProfilImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontType="Exo_Bold"
        android:gravity="center"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_below="@+id/tv_columnistAuthorName"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="35dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <LinearLayout
            android:id="@+id/ly_archiveList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:background="@drawable/buttons_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="15dp">

            <turkuvaz.general.turkuvazgeneralwidgets.TurkuvazTextView.TTextView
                android:id="@+id/mTv_AllArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tum_yazilari"
                android:textColor="#FFFFFF"
                android:textSize="13dp"
                android:textStyle="bold"
                app:fontType="Exo_SemiBold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_profileShare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:background="@drawable/buttons_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <turkuvaz.general.turkuvazgeneralwidgets.TurkuvazTextView.TTextView
                android:id="@+id/mTv_ShareArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yaziyi_paylas"
                android:textColor="#FFFFFF"
                android:textSize="13dp"
                android:textStyle="bold"
                app:fontType="Exo_SemiBold" />
        </LinearLayout>

    </RelativeLayout>

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:background="@color/red"-->
<!--        android:layout_height="100dp"/>-->
</RelativeLayout>