<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="SparkPlayButton" parent="ExoMediaButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="SparkPlayButton.Play">
        <item name="android:src">@drawable/exo_controls_play</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>
    <style name="SparkPlayButton.Pause">
        <item name="android:src">@drawable/exo_controls_pause</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>
    <style name="SparkPlayButton.Replay">
        <item name="android:src">@drawable/ic_replay</item>
        <item name="android:contentDescription">Replay</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="SparkTimeBarHolder">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">26dp</item>
    </style>
    <style name="SparkPlayerTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    <style name="SparkPlayerTime.Current">
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="SparkPlayerTime.Duration">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="SparkMenuButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:src">@drawable/ic_menu</item>
        <item name="android:contentDescription">@string/menu_description</item>
    </style>
    <style name="SparkVideoTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="SparkGearButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:src">@drawable/ic_gear_white</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="SparkFullscreenButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:src">@drawable/ic_fullscreen</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="SparkTopBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="SparkBottomBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="SparkLiveControl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/live</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>
    <style name="SparkCircularProgress">
        <item name="colorAccent">#DDD</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>
</resources>
